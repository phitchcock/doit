<div class="login-panel panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Resend confirmation instructions</h3>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-goup">
        <%= f.email_field :email, autofocus: true, placeholder: "Your email", class: 'form-control' %><br/>
      </div>
      <div class="form-goup">
        <%= f.submit "Please resend confirmation", class: "btn btn-lg btn-success btn-block" %>
      </div>
    <% end %>
    <div class="form-group text-center">
      <span>Don't have an account?</span>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

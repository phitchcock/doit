<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <div class="login-panel panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Welcome! Please Register</h3>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="input-group form-group">
            <%= f.email_field :email, autofocus: true, placeholder: "Your email", class: 'form-control' %>
            <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
          </div>
          <div class="input-group form-group">
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Password" %>
            <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
          </div>
          <div class="input-group form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Password Confirm" %>
            <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
          </div>
          <div class="form-group">
            <%= f.submit "Sign up", class: "btn btn-lg btn-success btn-block" %>
          </div>
        <% end %>
        <div class="form-group text-center">
          <span>Don't have an account?</span>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-2"></div>
</div>